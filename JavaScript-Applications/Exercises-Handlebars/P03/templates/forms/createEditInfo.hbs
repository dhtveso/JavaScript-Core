<div>Title:</div>
<div>
    <input type="text" name="title" value="{{title}}" required />
</div>
<div>Description:</div>
<div>
    <textarea name="description" rows="10" required>{{description}}</textarea>
</div>
<div>Date Published:</div>
<div>
    <input type="date" name="datePublished" value="{{datePublished}}" required />
</div>
<div>Price:</div>
<div>
    <input type="number" step="0.01" name="price" value="{{price}}" required />
</div>
<div>Image:</div>
<div>
    <input type="link" name="imgPath" value="{{imgPath}}" required />
</div>